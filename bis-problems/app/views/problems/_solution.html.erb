<div class="center-problem">
      <div class="problem">
      <p><%= solution.description %></p>
      </div>
      <div class="problem-icons">
      <%=link_to like_problem_solution_path(solution.problem,solution), method: :put do %>
         <%=image_tag('up.png' , class: 'img-responsive')%>
      <%end%>
      <h2 class='text-center'><%=solution.score%></h2>
       <%=link_to dislike_problem_solution_path(solution.problem,solution), method: :put do %>
         <%=image_tag('down.png' , class: 'img-responsive')%>
      <%end%>
      </div>
</div>
